<apex:page controller="CompanyController">
    <apex:pageBlock >
        <apex:pageBlockTable value="{!displayList}" var="i" >
            <apex:column headerValue="Description">
            	<apex:outputText value="{!i.description}"/>
            </apex:column>
            <apex:column headerValue="First company">
                <apex:outputText value="{!i.firstCompany}"/>
            </apex:column>
            <apex:column headerValue="Second company">
            	<apex:outputText value="{!i.secondCompany}"/>
            </apex:column>
        </apex:pageBlockTable>
    </apex:pageBlock>
</apex:page>